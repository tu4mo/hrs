{
  "name": "hrs-cli",
  "version": "0.1.0-alpha.3",
  "description": "Simple CLI for tracking your work day",
  "main": "dist/hrs.js",
  "bin": {
    "hrs": "./dist/hrs.js"
  },
  "scripts": {
    "format": "prettier --no-semi --single-quote --write \"**/*.{ts,md}\"",
    "prepublish": "tsc",
    "start": "ts-node src/hrs",
    "test": "tslint \"src/**/*.ts\" && jest \"src\"",
    "test:coverage": "jest --coverage \"src\"",
    "test:watch": "jest --watch \"src\""
  },
  "author": "tu4mo",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^1.29.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.6",
    "jest": "^22.3.0",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "typescript": "^2.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu4mo/hrs.git"
  },
  "bugs": {
    "url": "https://github.com/tu4mo/hrs/issues"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "homepage": "https://github.com/tu4mo/hrs",
  "preferGlobal": true
}
